<form id="creation-form" role="form" class="col-sm-6 col-sm-offset-3">
	<div class="form-group">
		<label for="name">Name:</label>
		<input id="name" type="text" class="form-control" required>
	</div>

	<div class="form-group">
		<!--TODO add tooltip to button-->
		<label for="quandl">Stock
			<a href="https://www.quandl.com/search?tags=[%22Stocks%22]" target="_blank"
			   class="btn btn-link quandl-info-btn">
				<span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
			</a>:
		</label>
		<input id="quandl" type="text" class="form-control" placeholder="Search" autocomplete="off">
	</div>

	<div class="form-group">
		<select id="stocks" class="form-control" required>
			<option value="" selected="selected" disabled="disabled">Select a stock!</option>
			<!--Contains the search results-->
		</select>
	</div>
	
	<div class="form-group">
		<label for="sayings">Sayings:</label>
		<select id="sayings" class="form-control" required>
			{{sayings}}
		</select>
	</div>

	<button type="submit" class="btn btn-default">Submit</button>
</form>